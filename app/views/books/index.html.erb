<h1>Books</h1>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <span><th><%= book.title %></th></span>
      <span><th><%= book.body %></th></span>
      <th><%= link_to "Show" , "/books/#{book.id}" %></th>
      <th><%= link_to "Edit", edit_book_path(book.id)  %></th>
      <th><%= link_to "Destroy" , destroy_book_path(book.id) , method: :delete , "data-confirm" => "Are you sure?" %></th>
    </tr>
    <% end %>
  </tbody>
 </table>

 <h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>